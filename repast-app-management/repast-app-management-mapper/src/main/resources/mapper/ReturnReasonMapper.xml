<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.huifangyuan.app.mapper.ReturnReasonMapper">
    <resultMap id="BaseResultMap" type="com.huifangyuan.app.domain.ReturnReason">
        <!--
          WARNING - @mbg.generated
        -->
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="shop_id" property="shopId" jdbcType="BIGINT"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="sort" property="sort" jdbcType="INTEGER"/>
        <result column="status" property="status" jdbcType="INTEGER"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <select id="selectReturnReasonListByShopId" resultMap="BaseResultMap">
       select id, shop_id, `name`, sort, `status`, create_time
       from oms_order_return_reason
       where shop_id=#{shopId} and `status`=1
    </select>

    <select id="selectReturnReasonList" resultMap="BaseResultMap">
       select id, shop_id, `name`, sort, `status`, create_time
       from oms_order_return_reason
       where `status`=1
    </select>

</mapper>